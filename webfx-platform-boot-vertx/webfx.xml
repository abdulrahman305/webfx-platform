<?xml version="1.0" encoding="UTF-8"?>
<project>

    <description>Vert.x implementation of the Boot API (for the server).</description>

    <exported-packages>
        <source-packages/>
    </exported-packages>

    <providers>
        <provider interface="dev.webfx.platform.boot.spi.ApplicationBooterProvider">dev.webfx.platform.boot.spi.impl.vertx.VertxApplicationBooterVerticle</provider>
    </providers>

    <dependencies>
        <used-by-source-modules/>
    </dependencies>

    <maven-pom-manual>
        <properties>
            <!-- ZipFileResolver is using Java 13 API FileSystems.newFileSystem() -->
            <java.version>13</java.version>
        </properties>
    </maven-pom-manual>

</project>
